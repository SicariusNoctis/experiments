root = true

[*]
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 80

[{*.py}]
max_line_length = 79

[{Makefile,*.mk}]
indent_style = tab

[{*.clj,*.f,*.f90,*.hs,*.lisp,*.lua,*.sh,*.tex}]
indent_size = 2
indent_style = space
